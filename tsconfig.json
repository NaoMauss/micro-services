{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "moduleDetection": "force",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "cdk/**/*",
    "lambda/**/*"
  ]
}
